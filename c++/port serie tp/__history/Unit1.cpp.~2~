#include <vcl.h>
#pragma hdrstop
#include "Unit2.h"
#include "Unit1.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
	Form1->Label1->Visible=false;
    RS232=new com();
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button1Click(TObject *Sender)
{
	Form1->Label1->Visible=true;
	bool rep=Form1->RS232->ouverture(L"com1");
	if(rep==true)
	{
		Form1->Label1->Caption="Le port est ouvert";
	}
	else
	{
	   Form1->Label1->Caption="L'ouverture du port à echoué";
	}



}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button4Click(TObject *Sender)
{
	Form1->Close();
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button2Click(TObject *Sender)
{
	wchar_t * chaine;
	char *chaine2;
	chaine2=new char(50);
	chaine=Form1->Edit1->Text.w_str();
	chaine2=Form1->RS232->ecriture(chaine);
	Form1->Label2->Caption=chaine2;
}

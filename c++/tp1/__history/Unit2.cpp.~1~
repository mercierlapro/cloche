//---------------------------------------------------------------------------

#pragma hdrstop

#include "Unit2.h"
#include <stdio.h>
#include <stdlib.h>
#include <time.h>
//---------------------------------------------------------------------------
pile_entier::pile_entier(int t)
{
	pile_entier *pile;
	pile->pile=new int(t);
	pile->taille=t; // taille max
	pile->hauteur=0; // taille réel
}
pile_entier::~pile_entier()
{
	pile_entier *pile;
	delete pile->pile;
}
void pile_entier::empile(int val)
{
  pile_entier *pile;

  val=0;
  val=rand();
  int j=0;
  for(int i=0;i<pile->taille;i++)
  {
	if(pile->pile[i])
	{
		j++;
	}

  }
  pile->pile[j]=val;
  pile->hauteur++;

}
int pile_entier::depile()
{
  pile_entier *pile;
  int j=0;
  pile->hauteur--;
  int valeur=0;
  for(int i=0;i<pile->taille;i++)
  {

	if(pile->pile[i])
	{
		j++;
	}

  }
  valeur=j;
  pile->pile[j]=0;
  return valeur;
}
int pile_entier::pleine()
{
  pile_entier *pile;
  int retourner=0;
  int j=0;
  for(int i=0;i<pile->taille;i++)
  {

	if(pile->pile[i])
	{
		j++;
	}

  }
  if(j!=0)
  {
	retourner=1;
  }
  else
  {
	  retourner=0;
  }

  return retourner;

}
int pile_entier::vide()
{
   pile_entier *pile;
  int retourner=0;
  int j=0;
  for(int i=0;i<pile->taille;i++)
  {

	if(pile->pile[i])
	{
		j++;
	}

  }
  if(j==0)
  {
	retourner=0;
  }
  else
  {
	  retourner=0;
  }

  return retourner;
}
int *pile_entier::getpile()
{
 pile_entier *pile;
 return pile->pile;

}
int pile_entier::gethauteur()
{
   pile_entier *pile;
   return pile->hauteur;
}
int pile_entier::gettaille()
{
   pile_entier *pile;
   return pile->taille;
}



#pragma package(smart_init)
